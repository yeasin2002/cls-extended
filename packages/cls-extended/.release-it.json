{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "requireCleanWorkingDir": false,
    "requireUpstream": false,
    "push": false,
    "commit": false,
    "tag": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "releaseNotes": "npx auto-changelog --stdout --commit-limit false -v ${version}",
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": true,
    "publishPath": ".",
    "skipChecks": true
  },
  "hooks": {
    "before:init": ["pnpm run build", "pnpm run typecheck"],
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog\n\nAll notable changes to this project will be documented in this file. See [Conventional Commits](https://conventionalcommits.org) for commit guidelines.",
      "types": [
        { "type": "feat", "section": "âœ¨ Features" },
        { "type": "fix", "section": "ğŸ› Bug Fixes" },
        { "type": "perf", "section": "âš¡ Performance Improvements" },
        { "type": "revert", "section": "âª Reverts" },
        { "type": "docs", "section": "ğŸ“š Documentation" },
        { "type": "style", "section": "ğŸ’ Styles" },
        { "type": "refactor", "section": "â™»ï¸ Code Refactoring" },
        { "type": "test", "section": "âœ… Tests" },
        { "type": "build", "section": "ğŸ”¨ Build System" },
        { "type": "ci", "section": "ğŸ‘· CI/CD" },
        { "type": "chore", "section": "ğŸ”§ Chores" }
      ]
    }
  }
}
